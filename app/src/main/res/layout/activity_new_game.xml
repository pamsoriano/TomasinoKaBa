<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.tomasinokaba.NewGame">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1. Which building houses the College of Nursing?"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Martin de Porres"
        android:id="@+id/button5"
        android:layout_above="@+id/button8"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Albertus Magnus"
        android:id="@+id/button6"
        android:layout_alignStart="@+id/button5"
        android:layout_above="@+id/button5"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Roque Ruano"
        android:id="@+id/button7"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button6"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Main Building"
        android:id="@+id/button8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="95dp" />


</RelativeLayout>
